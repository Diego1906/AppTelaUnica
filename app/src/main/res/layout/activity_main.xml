<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_moto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_harley" />

    <TextView
        android:id="@+id/txt_linha1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/img_moto"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_linha1"
        android:text="@string/titulo"
        android:textAlignment="center"
        android:textColor="#8B0000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_titulo"
        android:text="@string/descricao"
        android:textAlignment="center"
        android:textColor="#191970"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_descricao_complemento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_descricao"
        android:text="@string/complemento_descricao"
        android:textAlignment="center"
        android:textColor="#008000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_linha2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/txt_descricao_complemento"
        android:layout_marginTop="3dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/relative_img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_linha2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/img_phone_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_contact_phone" />

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_phone_contact"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/img_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_email"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_place" />

        <ImageView
            android:id="@+id/img_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_endereco"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_time" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/txt_linha2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/relative_img">

        <TextView
            android:id="@+id/txt_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefone"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_telefone"
            android:layout_marginTop="5dp"
            android:text="@string/email"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_email"
            android:layout_marginTop="5dp"
            android:text="@string/endereco"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_funcionamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_endereco"
            android:layout_marginTop="5dp"
            android:text="@string/funcionamento"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_funcionamento"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="@string/horario_semana"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_horario"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="@string/horario_fim_de_semana"
            android:textColor="@android:color/black"
            android:textSize="13sp" />


    </RelativeLayout>
</RelativeLayout>


