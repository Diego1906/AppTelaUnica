<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_moto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_harley" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_moto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Farias Custom Motorcicle"
        android:textColor="#8B0000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txt_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_titulo"
        android:layout_marginTop="0dp"
        android:text="@string/descricao"
        android:textAlignment="center"
        android:textColor="#191970"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_descricao_complemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_descricao"
        android:layout_centerHorizontal="true"
        android:text="Atendemos todo o Brasil."
        android:textColor="#008000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_linha"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/txt_descricao_complemento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/img_phone_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_linha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_contact_phone" />

    <TextView
        android:id="@+id/txt_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_linha"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/img_phone_contact"
        android:text="Telefone: (11) 4747-4747"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_phone_contact"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_email" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_telefone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_email"
        android:text="E-mail: FariasCustom@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_place" />

    <TextView
        android:id="@+id/txt_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_endereco"
        android:text="Avenida: Paulista, 1850 - Consolação"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_endereco"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_time" />

    <TextView
        android:id="@+id/txt_funcionamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_endereco"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_horario"
        android:text="Horário de Funcionamento"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_funcionamento"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:text="Segunda à Sexta das 08:00 as 18:00hs"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_horario"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:text="Sábado das 08:00 as 12:00hs"
        android:textColor="@android:color/black"
        android:textSize="13sp" />
</RelativeLayout>


